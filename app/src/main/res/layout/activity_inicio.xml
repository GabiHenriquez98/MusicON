<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Inicio">

    <android.support.v7.widget.RecyclerView
        android:layout_width="142dp"
        android:layout_height="515dp"
        android:clipToPadding="false"
        android:fadeScrollbars="true"
        app:barrierDirection="left"
        tools:layout_editor_absoluteY="-4dp" >

        <Button
            android:id="@+id/button6"
            android:layout_width="139dp"
            android:layout_height="36dp"
            android:text="Mi Musica" />

        <Button
            android:id="@+id/button5"
            android:layout_width="139dp"
            android:layout_height="36dp"
            android:text="Mi Musica" />
    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/btn_mimusica"
        android:layout_width="139dp"
        android:layout_height="36dp"
        android:text="Mi Musica"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/btn_playlist"
        android:layout_width="141dp"
        android:layout_height="39dp"
        android:text="Mis Playlist"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="36dp" />

    <Button
        android:id="@+id/btn_canciones"
        android:layout_width="142dp"
        android:layout_height="36dp"
        android:text="Canciones"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="75dp" />

    <Button
        android:id="@+id/btn_subidas"
        android:layout_width="141dp"
        android:layout_height="37dp"
        android:text="Mis Subidas"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="111dp" />

    <Button
        android:id="@+id/btn_configuraciones"
        android:layout_width="141dp"
        android:layout_height="36dp"
        android:onClick="@string/activity_configuraciones"
        android:text="Configuracion"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="148dp" />

    <SearchView
        android:id="@+id/btn_buscar"
        android:layout_width="46dp"
        android:layout_height="53dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="337dp" />

</android.support.constraint.ConstraintLayout>